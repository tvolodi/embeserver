<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/test_reader_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestReaderFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Reader Functions"
            android:textAlignment="center" />

        <Button
            android:id="@+id/connect_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8BC34A"
            android:text="Connect Device" />

        <Button
            android:id="@+id/read_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8BC34A"
            android:text="Read Tag" />

        <Button
            android:id="@+id/continuous_read_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00BCD4"
            android:text="Continuous Read Tags" />

        <Button
            android:id="@+id/tag_location_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#009688"
            android:text="Tag Location" />

        <Button
            android:id="@+id/stop_reading_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F44336"
            android:text="Stop Reading" />

        <ProgressBar
            android:id="@+id/tagSignalStrengthPBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tagSignalStrengthTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Signal" />

        <TextView
            android:id="@+id/tagEpcViewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            />

        <TextView
            android:id="@+id/tagRelativeDistanceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>